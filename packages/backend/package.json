{
	"name": "@space/backend",
	"scripts": {
		"dev": "nodemon -q ./src/main.ts"
	},
	"type": "module",
	"devDependencies": {
		"@eddeee888/gcg-typescript-resolver-files": "0.10.4",
		"@graphql-codegen/cli": "5.0.2",
		"@swc/cli": "0.4.1-nightly.20240914",
		"@swc/core": "1.7.26",
		"@types/bcrypt": "5.0.2",
		"@types/node": "22.6.1",
		"nodemon": "3.1.7",
		"tsx": "4.19.1",
		"typescript": "5.5.4"
	},
	"nodemonConfig": {
		"exec": "node --import=tsx --env-file=.env",
		"ignore": [
			"**/*.spec.ts"
		],
		"watch": [
			"src/main.ts",
			"src/schema/**/*.ts"
		],
		"ext": "ts,tsx",
		"signal": "SIGHUP",
		"delay": 500
	},
	"dependencies": {
		"@graphql-yoga/plugin-defer-stream": "3.7.0",
		"@graphql-yoga/plugin-jwt": "3.1.0",
		"@space/data": "workspace:*",
		"@space/gameloop": "workspace:*",
		"@whatwg-node/server-plugin-cookies": "1.0.3",
		"bcrypt": "5.1.1",
		"dayjs": "1.11.13",
		"graphql": "16.9.0",
		"graphql-scalars": "1.23.0",
		"graphql-yoga": "5.7.0",
		"jose": "5.9.3",
		"rxjs": "7.8.1"
	}
}
