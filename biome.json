{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"**/gql/*.ts",
			"**/dist/**/*",
			"**/*.generated.ts",
			"**/*.gen.ts"
		],
		"include": ["**/src/**/*"]
	}
}
